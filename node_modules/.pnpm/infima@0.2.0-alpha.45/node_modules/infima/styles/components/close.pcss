.close {
  color: var(--ifm-color-black);
  float: right;
  font-size: 1.5rem;
  font-weight: var(--ifm-font-weight-bold);
  line-height: 1;
  opacity: 0.5;
  padding: 1rem;
  @mixin transition opacity;

  &:hover {
    opacity: 0.7;
  }

  &:focus {
    opacity: 0.8;
  }
}
