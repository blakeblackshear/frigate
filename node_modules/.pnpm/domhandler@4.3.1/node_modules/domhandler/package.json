    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "htmlparser2": "^7.2.0",
        "jest": "^27.5.1",
        "prettier": "^2.6.0",
        "ts-jest": "^27.1.3",
        "typescript": "^4.6.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "prettier": {
        "tabWidth": 4
    }
