    }

    &:hover {
      background-color: var(--ifm-hover-overlay);
    }
  }

  &--block {
    justify-content: stretch;

    @media (--ifm-narrow-window) {
      flex-direction: column;
    }

    ^&__item {
      flex-grow: 1;
      justify-content: center;
    }
  }
}
